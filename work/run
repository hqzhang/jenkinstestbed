def runWithGroovy(String cmd, String version, String fileName){
    script{
        withGroovy(tool:'4.0.11'){
            def cmd= """
                groovy --version
                myfile="/Users/hongqizhang/workspace/wavecloud/groovytest/work/configuration.yml"
                groovy -Ddata=${myfile} -e "import groovy.yaml.YamlSlurper; \
                    def fileName=System.getProperty('data'); \
                    def data=new File(fileName).text; \
                    println new YamlSlurper().parseText(data) "
            """
            return sh(returnStdout: true, script: $cmd).trim()
        }
    }
}

